#!/bin/bash

if true ; then
	cat <<- EOF > /etc/logrotate.d/freepbx-xmpp
	/var/log/asterisk/xmpp_err.log
	/var/log/asterisk/xmpp_out.log{
		size 50M
		missingok
		rotate 5
		notifempty
		sharedscripts
		create 0640 asterisk asterisk
		postrotate
		/usr/sbin/fwconsole pm2 --reload-logs
		endscript
	}
	EOF
fi
